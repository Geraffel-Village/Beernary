[Unit]
Description=beernary-counter
After=mariadb.service

[Service]
WorkingDirectory={{ beernary_counter_destination_path }}
ExecStart={{ beernary_counter_destination_path }}.venv/bin/python3 {{ beernary_counter_destination_path }}beernary_counter.py
KillMode=process
Restart=on-failure
RestartSec=3s
User={{ beernary_counter_application_user }}
Group={{ beernary_counter_application_group }}
UMask=007
SyslogIdentifier=beernary-counter

[Install]
WantedBy=multi-user.target
